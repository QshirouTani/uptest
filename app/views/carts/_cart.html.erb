<% unless cart.line_items.empty? %>
<div class = "cart_total">カート</div>
<table>
	<%= render(cart.line_items)%>
	<tr class = "total_line">
		<td><% colspan="2" %>合計</td>
		<td class = "total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>

<%= button_to '購入', new_order_path, method: :get, data:{confirm: 'ご決済してもよろしいですか?'} %>
<%= button_to 'カートから削除', @cart, method: :delete, data:{confirm: '削除してもよろしいですか?'} %>
<% end %> 